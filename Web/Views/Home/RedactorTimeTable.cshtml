@{
    ViewBag.Title = "AARecords";
}

<p class="lead">@ViewBag.Message </p>

<div class="row">
    <form action="" method="post">
        <div class="row">
            <input type="text" placeholder="DayOfWeek" class="center-block input-lg" name="day" />
        </div>

        <div class="row">
            <input type="text" placeholder="Number of table" class="center-block input-lg" name="table" />
        </div>

        <div class="row">
            <input type="text" placeholder="Room" class="center-block input-lg" name="room" />
        </div>

        <div class="row">
            <input type="submit" class="center-block btn" value="Add" />
        </div>
    </form>
</div>